<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs', {matchesActive: true}) %>

<div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12 col-md-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">CSGO Matches</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="matchesDataTable" width="100%" cellspacing="0">
                                    <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Team 1</th>
                                        <th>Team 2</th>
                                        <th>Map</th>
                                        <th>Team 1 Score</th>
                                        <th>Team 2 Score</th>
                                        <th>View Match</th>
                                    </tr>
                                    </thead>
                                    <tfoot>
                                    <tr>
                                        <th>Date</th>
                                        <th>Team 1</th>
                                        <th>Team 2</th>
                                        <th>Map</th>
                                        <th>Team 1 Score</th>
                                        <th>Team 2 Score</th>
                                        <th>View Match</th>
                                    </tr>
                                    </tfoot>
                                    <tbody>
                                    <% for(var i = 0; i < matches.length; i++){ %>
                                        <tr class="odd">
                                            <td class="fw-bold"><%= matches[i].date.split("T")[0] %></td>
                                            <td class="fw-bold"><%= matches[i].teams[0].clan %></td>
                                            <td class="fw-bold"><%= matches[i].teams[1].clan %></td>
                                            <td><%= matches[i].map %></td>
                                            <td><%= matches[i].teams[0].score %></td>
                                            <td><%= matches[i].teams[1].score %></td>
                                            <td class="text-center"><a href="/match/<%= matches[i].id %>"
                                                                       class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                                                            class="fas fa-eye fa-sm text-white-50"></i> View Match</a>
                                            </td>
                                        </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer.ejs') %>
<script>
    $(document).ready(function () {
        $('#matchesDataTable').DataTable({
            order: [[0, "asc"]]
        });
    });
</script>
